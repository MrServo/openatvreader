	</widget>
	<widget source="global.CurrentTime" render="Label" position="645,5" size="62,31" foregroundColor="#00ffffff" backgroundColor="#102e2e2e" font="Regular; 22" valign="top" halign="left" transparent="1" zPosition="2">
